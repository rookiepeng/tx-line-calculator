<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioButton
        android:id="@+id/radioBtn_S"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <!-- S: -->

    <TextView
        android:id="@+id/text_S_radio"
        android:layout_width="20dip"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/radioBtn_S"
        android:layout_centerVertical="true"
        android:text="@string/cmlin_text_S" />

    <!-- S输入框 -->

    <EditText
        android:id="@+id/editText_S_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="100dip"
        android:layout_toEndOf="@+id/text_S_radio"
        android:inputType="numberDecimal">

        <!-- <requestFocus /> -->
    </EditText>

    <!-- S单位 -->

    <Spinner
        android:id="@+id/spinner_S_radio"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />
</RelativeLayout>
