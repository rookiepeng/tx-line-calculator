<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/windowBackground"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/windowBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- The main content view -->
            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="ca-app-pub-6523245757541965/6074164130" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dip"
                android:paddingRight="10dip">

                <!-- 带状线结构图 -->

                <ImageView
                    android:id="@+id/slin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dip"
                    android:layout_marginTop="10dip"
                    android:contentDescription="@string/slin"
                    android:src="@drawable/slin" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip"
                    android:background="@drawable/custom_bg"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Ana"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="?android:attr/textColorTertiary" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:background="?android:attr/listDivider" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radioBtn1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true" />

                        <!-- W: -->

                        <TextView
                            android:id="@+id/slin_text_W"
                            android:layout_width="20dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/radioBtn1"
                            android:text="@string/slin_text_W" />

                        <!-- W输入框 -->

                        <EditText
                            android:id="@+id/slin_editText_W"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="100dip"
                            android:layout_toRightOf="@+id/slin_text_W"
                            android:inputType="numberDecimal">

                            <!-- <requestFocus /> -->
                        </EditText>

                        <!-- W单位 -->

                        <Spinner
                            android:id="@+id/slin_spinner_W"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radioBtn2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true" />

                        <!-- H: -->

                        <TextView
                            android:id="@+id/slin_text_H"
                            android:layout_width="20dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/radioBtn2"
                            android:text="@string/slin_text_H" />

                        <!-- H输入框 -->

                        <EditText
                            android:id="@+id/slin_editText_H"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="100dip"
                            android:layout_toRightOf="@+id/slin_text_H"
                            android:inputType="numberDecimal"></EditText>
                        <!-- H单位 -->

                        <Spinner
                            android:id="@+id/slin_spinner_H"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/radioBtn3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true" />

                        <!-- epsilon: -->

                        <TextView
                            android:id="@+id/slin_text_er"
                            android:layout_width="20dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/radioBtn3" />

                        <!-- epsilon输入框 -->

                        <EditText
                            android:id="@+id/slin_editText_er"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="100dip"
                            android:layout_toRightOf="@+id/slin_text_er"
                            android:inputType="numberDecimal"></EditText>
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="?android:attr/listDivider" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip">

                        <RadioButton
                            android:id="@+id/radioBtn4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:visibility="invisible" />

                        <!-- L: -->

                        <TextView
                            android:id="@+id/slin_text_L"
                            android:layout_width="20dip"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/radioBtn4"
                            android:text="@string/slin_text_L" />

                        <!-- L输入框 -->

                        <EditText
                            android:id="@+id/slin_editText_L"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="100dip"
                            android:layout_toRightOf="@+id/slin_text_L"
                            android:inputType="numberDecimal">

                            <!-- <requestFocus /> -->
                        </EditText>

                        <!-- L单位 -->

                        <Spinner
                            android:id="@+id/slin_spinner_L"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <!-- bottom -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dip">

                        <Button
                            android:id="@+id/slin_syn"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="10dip"
                            android:drawableTop="@drawable/syn"
                            android:text="@string/Syn"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <Button
                            android:id="@+id/slin_ana"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="10dip"
                            android:drawableTop="@drawable/ana"
                            android:text="@string/Ana"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Syn"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="?android:attr/textColorTertiary" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:background="?android:attr/listDivider" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- Z0: -->

                        <TextView
                            android:id="@+id/slin_text_Z0"
                            android:layout_width="30dip"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dip" />

                        <!-- Z0输入框 -->

                        <EditText
                            android:id="@+id/slin_editText_Z0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="100dip"
                            android:layout_toRightOf="@+id/slin_text_Z0"
                            android:inputType="numberDecimal">

                            <!-- <requestFocus /> -->
                        </EditText>

                        <!-- Z0单位 -->

                        <Spinner
                            android:id="@+id/slin_spinner_Z0"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <!-- E eff: -->

                        <TextView
                            android:id="@+id/slin_text_Eeff"
                            android:layout_width="30dip"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="3dip" />

                        <!-- E eff输入框 -->

                        <EditText
                            android:id="@+id/slin_editText_Eeff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="100dip"
                            android:layout_toRightOf="@+id/slin_text_Eeff"
                            android:inputType="numberDecimal">

                            <!-- <requestFocus /> -->
                        </EditText>

                        <!-- E eff单位 -->

                        <Spinner
                            android:id="@+id/slin_spinner_Eeff"
                            android:layout_width="100dip"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Phy"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="?android:attr/textColorTertiary" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dip"
                    android:background="?android:attr/listDivider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- f: -->

                    <TextView
                        android:id="@+id/slin_text_Freq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="3dip"
                        android:text="@string/Freq" />

                    <!-- f输入框 -->

                    <EditText
                        android:id="@+id/slin_editText_Freq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="110dip"
                        android:layout_toRightOf="@+id/slin_text_Freq"
                        android:inputType="numberDecimal">

                        <!-- <requestFocus /> -->
                    </EditText>

                    <!-- f单位 -->

                    <Spinner
                        android:id="@+id/slin_spinner_Freq"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dip">

                    <!-- T: -->

                    <TextView
                        android:id="@+id/slin_text_T"
                        android:layout_width="20dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:layout_marginRight="3dip"
                        android:text="@string/slin_text_T" />

                    <!-- T输入框 -->

                    <EditText
                        android:id="@+id/slin_editText_T"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="110dip"
                        android:layout_toRightOf="@+id/slin_text_T"
                        android:inputType="numberDecimal"></EditText>
                    <!-- T单位 -->

                    <Spinner
                        android:id="@+id/slin_spinner_T"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
