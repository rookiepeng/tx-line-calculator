<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioButton
        android:id="@+id/radioBtn_Eeff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

    <!-- E eff: -->

    <TextView
        android:id="@+id/text_Eeff_radio"
        android:layout_width="30dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/radioBtn_Eeff" />

    <!-- E eff输入框 -->

    <EditText
        android:id="@+id/editText_Eeff_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="100dip"
        android:layout_toEndOf="@+id/text_Eeff_radio"
        android:inputType="numberDecimal">

        <!-- <requestFocus /> -->
    </EditText>

    <!-- E eff单位 -->

    <Spinner
        android:id="@+id/spinner_Eeff_radio"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true" />
</RelativeLayout>