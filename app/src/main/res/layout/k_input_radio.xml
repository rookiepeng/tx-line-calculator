<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioButton
        android:id="@+id/radioBtn_k"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:visibility="invisible" />

    <!-- k: -->

    <TextView
        android:id="@+id/text_k_radio"
        android:layout_width="30dip"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/radioBtn_k"
        android:text="@string/cmlin_text_k" />

    <!-- k输入框 -->

    <EditText
        android:id="@+id/cmlin_editText_k"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="100dip"
        android:layout_toEndOf="@+id/text_k_radio"
        android:inputType="numberDecimal">

        <!-- <requestFocus /> -->
    </EditText>


</RelativeLayout>